# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.rs]
indent_style = tab
indent_size = 4

[{*.md,.gitignore,.env*,justfile,Dockerfile}]
indent_style = tab
indent_size = 8

[{*.toml,*.lock,*.nix}]
indent_style = tab
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

